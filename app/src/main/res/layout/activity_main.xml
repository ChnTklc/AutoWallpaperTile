<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="usage.personal.wallpapertile.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:text="@string/upperButton"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/chooseFile"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_margin="10dp"
        android:onClick="showFileChooser"
        android:text="@string/text" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/filepath"
        android:textAlignment="viewStart"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_below="@+id/chooseFile"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/clear"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chooseFile"
        android:layout_alignBottom="@+id/chooseFile"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="clearPath"
        android:text="@string/clear" />

</RelativeLayout>
